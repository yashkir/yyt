<!DOCTYPE html>
<html>
  <head>
    <link href="/css/tasks.css" rel="stylesheet" type="text/css">
  </head>
  <body>
    <h1>Task List</h1>
    {{#each tasks}}
      <ul>
        <li {{#if this.isDone}}class="done"{{/if}}>
          <a href="{{this.id}}/done">[done]</a> : 
          <a href="{{this.id}}/delete">[delete]</a> :
          {{this.id}} : {{#if this.isDone}}DONE : {{/if}} {{this.text}}
        </li>
      </ul>
    {{/each}}
  </body>
</html>
