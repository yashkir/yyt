<!DOCTYPE html>
<html>
  <head>
    <link href="/css/tasks.css" rel="stylesheet" type="text/css">
  </head>
  <body>
    <h1>Task List</h1>
    <form action="add/">
      <input type="submit" value="Add Task">
      <input type="text" id="task_text" name="task_text">
    </form>
    {{#each tasks}}
      <ul class="tasks">
        <li {{#if this.isDone}}class="done"{{/if}}>
          <a href="{{this.id}}/delete">[delete]</a> :
          <a href="{{this.id}}/done" class="checkmark">{{#if this.isDone}}&#x2611;{{else}}&#x2610;{{/if}}</a>
          {{this.text}} : {{this.id}}
        </li>
      </ul>
    {{/each}}
  </body>
</html>
