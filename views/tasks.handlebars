<h1>{{session.username}}'s Task List <small>[<a href="download/">download</a>]</small></h1>

<table class="task-controls">
  <tr>
    <form action="add/">
      <td><input type="submit" value="Add Task"></td>
      <td><input type="text" id="task_text" name="task_text" autofocus></td>
    </form>
  </tr>
  <tr>
    <form action="filter/">
      <td> <input type="submit" value="Filter"> </td>
      <td> <input type="text" id="filter_text" name="filter_text"> </td>
      <td> <label for="filter_text"><em>{{session.filter}}<em></label></td>
    </form>
  </tr>
  <tr>
    <td>
      <form action="hidedone/">
        {{#if session.hideDone}}
        <input class="show-done" type="submit" value="Show Done">
        {{else}}
        <input class="hide-done" type="submit" value="Hide Done">
        {{/if}}
      </form>
    </td>
  </tr>
</table>
<br>

{{#each tasks}}
  <ul class="tasks">
    <li {{#if this.isDone}}class="done"{{/if}}>
      <a href="{{this.id}}/done" class="checkmark">{{#if this.isDone}}&#x2611;{{else}}&#x2610;{{/if}}</a>
      {{this.text}}
      <!--{{this.id}}-->
      <a href="{{this.id}}/delete" class="delete">[delete]</a>
    </li>
  </ul>
{{/each}}

